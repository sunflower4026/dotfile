set $useful_shortcut (e) Memory, (s) Sensors, (t) Speed Test (r) Htop, (p) Ping, (n) Neofetch,
mode "$useful_shortcut" {
    bindsym e exec i3-sensible-terminal -e watch free -h
    bindsym s exec i3-sensible-terminal -e watch sensors
    bindsym r exec i3-sensible-terminal -e htop
    bindsym p exec i3-sensible-terminal -e ping 8.8.8.8
    bindsym t exec i3-sensible-terminal -e speed-test
    bindsym n exec i3-sensible-terminal -e bash -c 'neofetch & sleep 60'

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+p mode "$useful_shortcut"



